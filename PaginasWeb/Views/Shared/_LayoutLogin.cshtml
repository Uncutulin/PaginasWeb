@using Microsoft.AspNetCore.Mvc
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/_content/CommonsNuget/css/commons-ui.min.css" />
    <link href="~/css/login.css" rel="stylesheet" />
<style>
        <style >
        /* Estilos personalizados para la plantilla */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .main-container {
            display: flex;
            width: 100%;
            height: 100vh;
        }

        .left-panel {
            /*background-color: #242d4e;*/
            background-image: url('/img/fondo-login.jpg');
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            background-position: right;
        }

        .right-panel {
            background-color: #000000;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo-img {
            max-width: 350px;
            width: 100%;
            height: auto;
        }

        .login-box {
            width: 360px;
            color: #fff;
        }

            .login-box .card {
                background: transparent;
                border: 0;
                box-shadow: none;
            }

        .login-card-body {
            background: transparent;
        }

        .login-box-msg {
            color: #ffffff;
            font-size: 1.5rem;
            font-weight: 300;
            padding-bottom: 1rem;
            text-align: left;
            padding-left: 0;
        }

        .form-control {
            background-color: #ffffff;
            border: 1px solid #ced4da;
        }

        .btn-primary {
            background-color: #2c5a93;
            border-color: #2c5a93;
        }

        .btn-primary:hover {
            background-color: #24497a;
            border-color: #24497a;
        }

        .left-panel, .right-panel {
            width: 100%;
            min-height: 50vh;
        }

        .left-panel {
            min-height: 30vh;
        }

        .logo-img {
            max-width: 200px;
        }

        }
    </style>
</head>
<body class="hold-transition">

    <div class="main-container">

        <div class="col-md-8 left-panel d-none d-md-flex">
            @* <img src="https://upload.wikimedia.org/wikipedia/commons/4/4e/Ministerio_de_Defensa_de_la_Rep%C3%BAblica_Argentina.svg" alt="Logo Ministerio de Defensa" class="logo-img"> *@
            <img src="~/img/largo-sin-fondo.png" style="width:35rem;align-self: center;" />
        </div>

        <div class="col-12 col-md-4 right-panel">
            <div class="login-box">
                @RenderBody()
            </div>
        </div>

    </div>

    <script src="~/_content/CommonsNuget/js/commons-ui.min.js"></script>
    @* <script src="https://kit.fontawesome.com/b091768c18.js" crossorigin="anonymous"></script> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
</body>
</html>